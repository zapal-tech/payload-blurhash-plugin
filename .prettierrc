{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "importOrder": [
    "^(^payload$|^payload/(.*)$)$",
    "^(^@payloadcms$|^@payloadcms/(.*)$)$",
    "^(react|react-dom)$",
    "<THIRD_PARTY_MODULES>",
    "^(../)",
    "^(./)"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 120,
  "proseWrap": "always",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false
}
